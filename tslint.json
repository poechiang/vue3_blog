{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "rules":{
      "no-console":false,
      "indent":[true, "spaces", 2],
      "no-consecutive-blank-lines": [
        true,
        4
      ],
      "align": [true, "parameters", "statements"]
    },
    "linterOptions": {
      "exclude": [
        "public/**/*.js",
        "node_modules/**"
      ]
    }
  }
