{
    "extends": ["stylelint-config-recommended", "stylelint-config-standard"],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["extends"]
            }
        ],
        "block-no-empty": null,
        "unit-allowed-list": ["%", "px", "vh", "vw", "em", "rem", "s"],
        "indentation": 4
    }
}
